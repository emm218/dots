#!/usr/bin/sh

shotpath="$HOME/pics/screenshots"
mkdir -p "$shotpath"

regions="selection\nfull screen"

tmp="$(mktemp)"

case "$(echo "$regions" | dmenu $@)" in
	"selection")
		maim -osuf png > "$tmp"
		;;
	"full screen")
		maim -ouf png > "$tmp"
		;;
	*)
		exit
esac

xclip -selection clipboard -t image/png < "$tmp"
dest="$(dmenu -p "filename" $@ < /dev/null)"
if [ $dest ]; then
	mv "$tmp" "$shotpath/${dest}.png"
fi

